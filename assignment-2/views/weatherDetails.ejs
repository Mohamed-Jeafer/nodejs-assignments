<%- include('./includes/head.ejs') %>
    <link rel="stylesheet" href="/css/weatherdetails.css">
    </head>

    <body>
        <%- include('./includes/navigation.ejs') %>
            <main>
                <% if (forecast && forecast.cityName) { %>
                    <div class="grid">
                            <article class="card product-item">
                                <header class="card__header">
                                    <h1 class="weather__cityName">
                                        <%= forecast.cityName %>,  <%= forecast.country %>
                                    </h1>
                                </header>
                                <div class="card__content">
                                    <h3 class="weather__min_max">
                                        Current temp: <%= forecast.temperature.temp %> C
                                    </h3>
                                    <h3 class="weather__min_max">
                                        Min temp: (<%= forecast.temperature.temp_min %>)C | Max temp: (<%= forecast.temperature.temp_max %>)C
                                    </h3>
                                    <h4 class="weather__description">
                                        Humidity <%= forecast.temperature.humidity %> <br> Pressure <%= forecast.temperature.pressure %>
                                    </h4>
                                    <h4 class="weather__description">
                                        <%= forecast.description %>
                                    </h4>
                                </div>
                            </article>
                    </div>
                    <% } else { %>
                        <h3>Weather forecast for this city not found</h3>
                        <h4>Try different spelling</h4>
                        <% } %>
            </main>
            <%- include('./includes/end.ejs') %>